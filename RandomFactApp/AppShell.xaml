<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RandomFactApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RandomFactApp"
    Shell.FlyoutBehavior="Flyout"
    Title="RandomFactApp">

    <ShellContent
        Title="API &amp; Websockets"
        ContentTemplate="{DataTemplate local:ApiSocketsPage}"
        Route="ApiSockets" />

    <ShellContent
        Title="Positioning"
        ContentTemplate="{DataTemplate local:PositioningPage}"
        Route="Positioning" />

    <ShellContent
        Title="Local Storage"
        ContentTemplate="{DataTemplate local:StoragePage}"
        Route="Storage" />

    <ShellContent
        Title="Media"
        ContentTemplate="{DataTemplate local:MediaPage}"
        Route="Media" />
</Shell>
